---
// src/components/Tip.astro
const { slot } = Astro.slots;
---

<style>
  .tip {
    padding: 10px;
    margin: 10px 0;
    background-color: #e6f9e6; /* light green background */
    border-left: 5px solid #34d058; /* darker green border */
    font-style: italic;
  }
</style>

<div class="tip">
  <strong>Tip:</strong>
  <slot />
</div>
